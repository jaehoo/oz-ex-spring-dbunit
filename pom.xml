            <!-- Maven Exec Plugin -->

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!-- HSQLDB server-->
                    <mainClass>org.hsqldb.server.Server</mainClass>
                    <arguments>
                        <argument>--database.0</argument>
                        <argument>file:db/DB_DEMO</argument>
                        <!--<argument>- -sql</argument>
                        <argument>'shutdown;'</argument>-->
                    </arguments>
                </configuration>
            </plugin>

            <!-- DB Unit -->

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>dbunit-maven-plugin</artifactId>
                <version>1.0-beta-3</version>

                <dependencies>
                    <dependency>
                        <groupId>mysql</groupId>
